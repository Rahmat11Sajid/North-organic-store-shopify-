{{ "hb-common.css" | asset_url  | stylesheet_tag }}
{{ "hb-deal.css" | asset_url  | stylesheet_tag }}
<div class="hb_deal" data-aos="fade-left">
    <div class="page-width">
        <div class="hb_deal__wrapper hb-flex">
            {%- for block in section.blocks -%}
                <div class="hb_deals__card" data-aos="flip-left" data-aos-duration="3000">
                    <div class="hb_deals__card--img">
                        {{ block.settings.card_img | image_url: width: 600 | image_tag }}
                    </div>
                    <div class="hb_deals__card--content">
                        <h3 class="hb_deals__card--title">{{ block.settings.title }}</h3>
                        <div class="hb_deals_card--btn hb-flex">
                            <a href="{{ block.settings.btn_url }}" class="hb_deals__card-btn--link">{{ block.settings.btn_text }}</a>
                            <div class="hb_deals_card--btn--svg">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25"><path style="fill:#232326" d="m17.5 5.999-.707.707 5.293 5.293H1v1h21.086l-5.294 5.295.707.707L24 12.499l-6.5-6.5z" data-name="Right"/></svg>
                            </div>
                        </div>
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Deals",
    "settings": [
      
    ],
    "blocks": [
      {
        "name": "Deal",
        "type": "deal",
        "settings": [
           {
             "type": "image_picker",
             "id": "card_img",
             "label": "Image"
           },
           {
             "type": "text",
             "id": "title",
             "label": "Title"
           },
           {
             "type": "text",
             "id": "btn_text",
             "label": "Button"
           },
           {
             "type": "url",
             "id": "btn_url",
             "label": "Button link"
           },
        ]
      }
    ],
    "presets": [
      {
        "name": "Deals",
        "settings": {
        }
      }
    ]
  }
{% endschema %}